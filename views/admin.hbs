{{#if error_msg}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{error_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}
<form id="referralsForm" action="/api/admin/referrals" method="post">
    <div class="form-group">
        <label></label>
        <input name="adminId" class="form-control mr-sm-2" type="text" autocomplete="off" required placeholder="Enter Admin ID">
    </div>
    <div class="form-group">
        <input type="date" name="fromDate" class="form-control" required placeholder="Enter Start Date">
    </div>
    <div class="form-group">
        <input type="date" name="toDate" class="form-control" required placeholder="Enter End Date">
    </div>
    <div class="form-group">
        <input type="number" name="threshold" class="form-control" required placeholder="Enter Threshold">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>