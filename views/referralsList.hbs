<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Username</th>
        <th scope="col">Referral Code</th>
        <th scope="col">Referral Count</th>
    </tr>
    </thead>
    <tbody>
    {{#each referralsList}}
        <tr class="table-primary">
            <th scope="row">{{this.username}}</th>
            <th scope="row">{{this.referralCode}}</th>
            <td>{{this.referralCount}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>